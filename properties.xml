<?xml version="1.0" encoding="UTF-8" ?>
<!--
     This file contains metadata and properties for conference websites.

     FOR MONOLINGUAL SITES:
    - Simply encode text content within each property element.

     FOR BILINGUAL SITES:
    - For each property, create a separate element for each language specified in the languages section.

     EXAMPLE:
     Monolingual: <siteTitle>My Site Title</siteTitle>
     Bilingual:   <siteTitle>
                        <en>My Site Title</en>
                        <de>Mein Seitentitel</de>
                    </siteTitle>
-->
<site>
    <!--The build process will pull this list of languages and use that to create the necessary build targets and outputs.
         This can be overwritten by running the build with -Dlanguages and specifying just the languages your want -->
    <languages>
        <lang code="en" label="English" default="true" />
        <lang code="de" label="Deutsch" />
    </languages>
        
    <lang-abbreviation>
        <en>DE</en>
        <de>EN</de>
    </lang-abbreviation>

    <files>
        <cssFile>css/brecht.css</cssFile>
        <jsFile>js/pux.js</jsFile>
        <faviconIco>images/favicon.ico</faviconIco>
        <faviconSvg>images/favicon.svg</faviconSvg>
        <siteManifest>site.webmanifest</siteManifest>
    </files>

    <metadata>
        <siteTitle>
            <en>Website Title</en>
            <de>Website-Titel</de>
        </siteTitle>
        <organizationName>
            <en>Organization Name</en>
            <de>Name der Organisation</de>
        </organizationName>

        <WhereWhen>
            <place>
                <en>Event Venue/Host</en>
                <de>Veranstaltungsort/Gastgeber</de>
            </place>
            <date>
                <en>June 15-17, 2024</en>
                <de>15. bis 17. Juni 2024</de>
            </date>
            <location>
                <en>Victoria, BC</en>
                <de>Victoria, BC</de>
            </location>
        </WhereWhen>
    </metadata>


    <!--Uncomment this and update the heading options if you want to have a language selector splash page-->
    <!-- For language selector page -->
    <!--<languageSelector>
        <heading>
            <en>Select your language</en>
            <de>Wählen Sie Ihre Sprache</de>
        </heading>
    </languageSelector>-->

    <!-- For div.lang-chooser -->
    <lang-chooser>
        <aria-label>
            <en>Change to German</en>
            <de>Wechseln zu Englisch</de>
        </aria-label>
    </lang-chooser>

    <lang-chooser-aria-label>
        <en>Change to German</en>
        <de>Wechseln zu Englisch</de>
    </lang-chooser-aria-label>


    <!--For img.slash-logo-->
    <splash-logo>
        <class>splash-logo</class>
        <src>images/logo-splash-brecht.webp</src>
        <en
        >Brecht in the anthropocene, 18th symposium of the International Brecht Society. University of Victoria, Victoria, BC, Canada: July 22-26, 2026.</en>
        <de
        >Brecht im Anthropozän, 18. Symposium der Internationalen Brecht-Gesellschaft. Universität Victoria, Victoria, BC, Kanada: 22. bis 26. Juli 2026.</de>
    </splash-logo>

    <!--For img.uvic-logo-->
    <uvic-logo>
        <href>https://hcmc.uvic.ca</href>
        <src>images/logo-uvic.svg</src>
        <alt>
            <en>University of Victoria Humanities Computing and Media Centre</en>
            <de>Zentrum für Geisteswissenschaften, Informatik und Medien der Universität Victoria</de>
        </alt>
    </uvic-logo>

    <!--For img.mobile-header-->
    <mobile-header>
        <src>images/logo-mobile-header.webp</src>
        <alt />
    </mobile-header>

    <!--For popover.splash-icon-->
    <popover-splash-icon>
        <src>images/logo-mobile-popover.webp</src>
        <alt />
    </popover-splash-icon>

    <!-- For a.skip-link-->
    <skip-link>
        <en>Skip to Content</en>
        <de>Weiter zum Inhalt</de>
    </skip-link>

    <!-- For nav.aria-label-->
    <site-navigation-label>
        <en>Primary</en>
        <de>Primär</de>
    </site-navigation-label>

    <!--For button.aria-label-->
    <popover-close-label>
        <en>Close</en>
        <de>Schließen</de>
    </popover-close-label>

    <!--For span.nav-toggle-label-->
    <nav-toggle-label>
        <en>Site Menu</en>
        <de>Seitenmenü</de>
    </nav-toggle-label>

    <!--For div.footer-container-->
    <footer-content>
        <items>
            <item>
                <?uvic-logo?>
            </item>
        </items>
    </footer-content>

    <!-- For div.popover-nav-items-->
    <navigation>
        <item href="index.html">
            <en>Home</en>
            <de>Startseite</de>
        </item>
        <item href="registration.html">
            <en>Registration</en>
            <de>Anmeldung</de>
        </item>
        <item href="program.html">
            <en>Program</en>
            <de>Programm</de>
        </item>
        <item href="accommodations.html">
            <en>Accommodations</en>
            <de>Unterkünfte</de>
        </item>
        <item href="gettinghere.html">
            <en>Getting here</en>
            <de>Anreise</de>
        </item>
        <item href="about.html">
            <en>About</en>
            <de>Über uns</de>
        </item>
    </navigation>

</site>
