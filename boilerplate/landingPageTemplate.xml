<html lang="en" xmlns="http://www.w3.org/1999/xhtml">

    <head>
        <title>
            <?siteTitle?>
        </title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="{?cssFile}" />
        <link rel="icon" href="{?faviconIco}" sizes="48x48" />
        <link
            rel="icon"
            href="{?faviconSvg}"
            sizes="any"
            type="image/svg+xml"
        />
        <link rel="manifest" href="{?siteManifest}" />
        <?fontPreloads?>
        <script src="{?jsFile}" />
        <meta name="description" content="{?metaDescription}" />
    </head>

    <body>
        <!-- Global safe-area wrapper -->
        <div class="page-wrapper">

            <!-- Site chrome -->
            <header id="site-header" class="site-masthead">
                <a href="#content" class="skip-link"><?skip-link?></a>

                <div class="nav-wrapper">
                    <!--Insert instruction for mobile header logo-->
                  <?mobile-header?>

                    <div class="button-wrapper">
                        <button
                            id="site-menu-toggle"
                            class="popover-nav-open"
                            type="button"
                            popovertarget="site-navigation"
                            popovertargetaction="toggle"
                            aria-controls="site-navigation"
                            aria-haspopup="true"
                            aria-expanded="false"
                        >
                            <span
                                class="nav-toggle-label"
                            ><?nav-toggle-label?></span>
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="menu-burger"
                                width="24"
                                height="24"
                                fill="none"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M3 12h18M3 6h18M3 18h18"
                                />
                            </svg>
                        </button>

                        <nav
                            id="site-navigation"
                            class="main-menu"
                            aria-label="{?site-navigation-label}"
                            popover="auto"
                        >
                            <button
                                type="button"
                                class="popover-nav-close"
                                aria-label="{?popover-close-label}"
                                popovertarget="site-navigation"
                                popovertargetaction="hide"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="close-x"
                                    width="24"
                                    height="24"
                                    fill="none"
                                    viewbox="0 0 24 24"
                                    aria-hidden="true"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M18 6 6 18M6 6l12 12"
                                    />
                                </svg>
                            </button>


                            <div class="popover-group-container">
                                <div class="popover-header" aria-hidden="true">
                                    <img
                                        class="popover-splash-icon"
                                        alt=""
                                        src="{?popover-splash-icon}"
                                        width="901"
                                        height="257"
                                    />

                                </div>

                                <ul class="popover-nav-items">
                                    <?navigation?>
                                </ul>

                            </div>
                        </nav>
                        <nav aria-label="{?nav-aria-label}">
                            <!-- The attributes here will be programmatically replaced by the XSLT based on the values of the languages parameter in properties.xml -->
                            <!-- We've left the empty elements here so that the XSLT knows which ones we want and so that it is clear which attributes to expect in the output HTML -->
                            <!-- Any element with class="lang-chooser" will be transformed in this way. So if you want to change the anchor to a button (or something else), you can do so -->
                            <a
                                class="lang-chooser"
                                aria-label=""
                                lang=""
                                hreflang=""
                                href=""
                            />
                        </nav>
                    </div>
                </div>

            </header>

            <main>
                <div class="blob">
                    <?splash-logo?>
                </div>
            </main>
            <footer>

            <div class="footer-container">
                     <ul class="footer-items">
                       <li>
                         <a href="https://hcmc.uvic.ca">
                         <?uvic-logo?>
                         </a>
                       </li>
                     </ul>
                   </div>

            </footer>
        </div>
    </body>

</html>
