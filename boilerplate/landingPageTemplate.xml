<html lang="en" xmlns="http://www.w3.org/1999/xhtml">

<head xmlns="http://www.w3.org/1999/xhtml">
    <title>
        <?siteTitle?>
    </title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="{?cssFile}" />
    <link rel="icon" href="{?faviconIco}" sizes="48x48" />
    <link rel="icon" href="{?faviconSvg}" sizes="any" type="image/svg+xml" />
    <link rel="manifest" href="{?siteManifest}" />
    <?fontPreloads?>
    <script src="{?jsFile}"></script>
    <meta name="description" content="{?metaDescription}" />
</head>

<body>

    <header id="site-header">
        <a href="#content" class="skip-link">Skip to content</a>

        <div class="nav-wrapper">

            <a href="index.html" class="nav-logo">
                <img src="images/splash-icon.png" alt="" width="35px" height="35px" />
            </a>

            <button id="site-menu-toggle" class="popover-nav-open" type="button" popovertarget="site-navigation" popovertargetaction="toggle" aria-controls="site-navigation" aria-haspopup="true" aria-expanded="false">
                <span class="nav-toggle-label">Site Menu</span>
                <span aria-hidden="true" class="line-container">
                    <span class="bar-top"></span>
                    <span class="bar-bottom"></span>
                </span>

            </button>

            <nav id="site-navigation" class="main-menu" popover="auto" aria-label="Main">
                <button type="button" class="popover-nav-close" aria-label="Close menu" popovertarget="site-navigation" popovertargetaction="hide">
                    <img src="images/x-close.svg" width="64" height="64" alt="" />
                </button>

                <div class="popover-group-container">

                    <div class="popover-header" aria-hidden="true">
                        <img class="popover-splash-icon" alt="{?splashIconAlt}" src="{?splashIcon}" width="100" height="100" />
                        <div class="popover-header-text">
                            <?splashTitle?>
                            <?splashSubtitle?>
                        </div>
                    </div>

                    <ul class="popover-nav-items">
                        <?navigation?>
                    </ul>
                </div>
            </nav>
        </div>
    </header>

    <main id="contentContainer" class="splash">
        <div id="bgContainer">
            <div id="bgInner" />
        </div>

        <div id="splashGrid">
            <div id="title">
                <?splashTitle?>
                <?splashSubtitle?>
            </div>


            <div id="whereWhen">
                <?splashWhereWhen?>
            </div>


        </div>

        <!--UVic logo-->
        <a class="uvic-logo-internal" href="{?uvicUrl}">
            <img src="{?uvicLogo}" alt="{?LogoAlt}" class="uvic-logo-internal" />
        </a>
    </main>
</body>

</html>